<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #252527;" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.PlayController">
   <children>
      <Button fx:id="stand" layoutX="520.0" layoutY="350.0" mnemonicParsing="false" onAction="#standButton" text="Stand">
         <font>
            <Font size="19.0" />
         </font>
      </Button>
      <Button fx:id="hit" layoutX="446.0" layoutY="355.0" mnemonicParsing="false" onAction="#hitButton" prefHeight="42.0" prefWidth="75.0" text="Hit">
         <font>
            <Font size="19.0" />
         </font>
      </Button>
      <Button fx:id="btnSitDown" layoutX="447.0" layoutY="355.0" mnemonicParsing="false" onAction="#dealButton" prefHeight="42.0" prefWidth="154.0" text="Sit Down">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <TextArea fx:id="gameLog" layoutY="297.0" prefHeight="104.0" prefWidth="303.0" />
      <Label fx:id="betLabel" layoutX="64.0" layoutY="16.0" textFill="WHITE">
         <font>
            <Font name="System Italic" size="18.0" />
         </font>
      </Label>
      <Button fx:id="btnSecondbet" layoutX="501.0" layoutY="355.0" mnemonicParsing="false" onAction="#actionBtnSecondbet" prefHeight="42.0" prefWidth="47.0" text="20" />
