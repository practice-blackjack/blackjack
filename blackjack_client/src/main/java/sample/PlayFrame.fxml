      <Canvas fx:id="canvas" height="342.0" layoutY="-2.0" width="602.0" />
      <TextField layoutX="371.0" layoutY="352.0" prefHeight="25.0" prefWidth="65.0">
         <font>
            <Font size="18.0" />
         </font>
      </TextField>
      <Button layoutY="-1.0" mnemonicParsing="false" onAction="#toMenu" text="Menu" />
      <Button fx:id="btnStandUp" layoutX="567.0" mnemonicParsing="false" onAction="#exitButton" text="Exit" visible="false" />
   </children>
</AnchorPane>
